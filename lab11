#include <iostream>
#include <climits>

//define graph size
#define V 6

using namespace std;

// find minimum key of set
int findMinKey(int key[], bool mstSet[]) {
    int minKey = INT_MAX, minIndex;
    for (int v = 0; v < V; ++v) {
        if (key[v] < minKey && !mstSet[v]  ) {
            minKey = key[v];
            minIndex = v;
        }
    }
    //return minimun index
    return minIndex;
}

// print MST 
void printMST(int parent[], int graph[V][V]) {
    cout << "Edges    Weight\n";
    for (int i = 1; i < V; ++i)
        cout << "(" << parent[i] << " - " << i << ") -  " << graph[i][parent[i]] << endl;
}

void print_MST(int graph[V][V]) {
    int parent[V];
    int key[V];
    bool mstSet[V];

    for (int i = 0; i < V; ++i) {
        key[i] = INT_MAX;
        mstSet[i] = false;
    }

    key[0] = 0;     // begining in node 0
    parent[0] = -1; // Root of MST

    for (int count = 0; count < V - 1; ++count) {
        int u = findMinKey(key, mstSet);
        mstSet[u] = true;

        // Update key values of the adjacent vertices
        for (int v = 0; v < V; ++v) {
            if (graph[u][v] && !mstSet[v] && graph[u][v] < key[v]) {
                parent[v] = u;
                key[v] = graph[u][v];
            }
        }
    }
    //print
    printMST(parent, graph);
}

int main() {
    //adajaceny matrix for the graph
    int graph[V][V] = {
        {0, 3, 0, 0, 0, 1},
        {3, 0, 2, 1, 10, 0},
        {0, 2, 0, 3, 0, 5},
        {0, 1, 3, 0, 5, 0},
        {0, 10, 0, 5, 0, 4},
        {1, 0, 5, 0, 4, 0}
    };
    //print MST
    print_MST(graph);

    return 0;
}
